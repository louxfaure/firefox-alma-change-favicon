{

  "description": "Changer le favicon en fonction de la session alma",
  "manifest_version": 2,
  "name": "change_alma_favicon",
  "version": "2.0.1",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.alma.exlibrisgroup.com/*"],
      "js": ["change_alma_favicon.js"]
    }
  ],
  
  "web_accessible_resources": [
  "icons/ubm.ico", "icons/ub.ico", "icons/iep.ico","icons/bxsa.ico","icons/inp.ico"
  ]
}